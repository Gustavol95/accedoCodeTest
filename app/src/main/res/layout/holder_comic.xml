<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="comic"
            type="com.accedo.codetest.data.network.Comic" />

        <variable
            name="listener"
            type="com.accedo.codetest.ui.chardetail.ComicAdapter.OnClickComic" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:onClick="@{() -> listener.onClick(comic)}"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    imageUrl="@{comic.thumbnail.url}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/comic_thumbnail"
                    android:scaleType="fitCenter" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</layout>